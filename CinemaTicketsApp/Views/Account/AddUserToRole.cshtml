@model CinemaTicketsDomain.DTOs.AddUserToRoleDto

<h2>Add User to Role</h2>

@using (Html.BeginForm()) {
    
    <i><h3 class="text-muted">Make sure to log out and log back in, if you change Role on the currently logged in account!</h3></i>
    
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedUserId, "User")
        @Html.DropDownListFor(m => m.SelectedUserId, Model.Users, "-- Select User --", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SelectedUserId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SelectedRoleName, "Role")
        @Html.DropDownListFor(m => m.SelectedRoleName, Model.Roles, "-- Select Role --", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SelectedRoleName, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary mt-3">Add to Role</button>
}